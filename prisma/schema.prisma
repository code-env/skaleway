generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Portfolio {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  imageUrl    String
  userId      String
  description String
  variant     String
  githubLink  String?
  demoLink    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
